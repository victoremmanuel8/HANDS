  <div class="comment" id="{{this._id}}">
   <div class="comment-principal">
     <div class="comment-user">
      <!-- Imagem de perfil -->
      <div class="img-perfil-profile">
        {{#if this.userProfile}}
        <img src="{{this.userProfile.url}}" width="145.269" height="156.839" alt="Foto de perfil de {{this.postedBy.nm_usuario}}" />
        {{else if this.profProfile}}
        <img src="{{this.profProfile.url}}" width="145.269" height="156.839" alt="Foto de perfil de {{this.postedBy.nm_prof}}" />
        {{else}}
        <p><img class="padrão" src="default-profile.png" alt="Foto de perfil padrão" /></p>
        {{/if}}
      </div>
      <!-- Nome do usuário e data do comentário -->
      <strong>{{this.postedByName}}</strong>
      {{!-- <span>{{formatDate this.commentedAt}}</span> --}}
    </div>
    <div class="comment-text">
      {{this.text}}
    </div>
